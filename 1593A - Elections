#include <bits/stdc++.h>
using namespace std;


int main() {
    int t;
    cin>>t;
    while(t--){
        int a,b,c;
        cin>>a>>b>>c;
        if(a>b && a>c){
            cout<<a-a<<" "<<a-b+1<<" "<<a-c+1<<endl;
        }
        if(b>a && b>c){
            cout<<b-a+1<<" "<<b-b<<" "<<b-c+1<<endl;
        }
        if(c>b && c>a){
            cout<<c-a+1<<" "<<c-b+1<<" "<<c-c<<endl;
        }
        if(a>c && a==b){
            cout<<a-a+1<<" "<<a-b+1<<" "<<a-c+1<<endl;
        }
        if(b>a && b==c){
            cout<<b-a+1<<" "<<b-b+1<<" "<<b-c+1<<endl;
        }
        if(c>b && c==a){
            cout<<c-a+1<<" "<<c-b+1<<" "<<c-c+1<<endl;
        }
        if(a==b && b==c){
            cout<<1<<" "<<1<<" "<<1<<endl;
        }
              }
        
    

    return 0;
}
