#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int t;
    cin>>t;
    while(t--)
    {
        long long int a,b,k;
        cin>>a>>b>>k;
        int maxx= 2*max((a+k-1)/k,(b+k-1)/k);
        if((a+k-1)/k>(b+k-1)/k){
            maxx--;
        }
        cout<<maxx<<endl;
    }
 
    return 0;
}
