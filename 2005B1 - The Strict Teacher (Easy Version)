#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
        int n,m,q;
        cin>>n>>m>>q;
        int a,b,x;
        cin>>a>>b;
        if(a>b)swap(a,b);
        cin>>x;
        if(x==a || x==b){
            cout<<0<<endl;
        }
        else if(x>b)cout<<n-b<<endl;
        else if(x<a)cout<<a-1<<endl;
        else cout<<(b-a)/2<<endl;
        
    }

    return 0;
}
