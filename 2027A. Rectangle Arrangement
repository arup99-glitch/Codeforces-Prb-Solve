#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        int h=0,w=0;
        for(int i=0;i<n;i++){
        int a,b;
        cin>>a>>b;
        h=max(h,a);
        w=max(w,b);
        }
        cout<<(h+w)*2<<endl;
        
    }
    return 0;
}
