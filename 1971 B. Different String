#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int t;
    cin>>t;
    while(t--){
        string s;
        cin>>s;
        int count=0;
        for(int i=1;i<s.size();i++){
            if(s[0]!=s[i]){
                swap(s[0],s[i]);
                count=1;
                break;
                 }
                
            
        }
        if(count==0)cout<<"NO"<<endl;
        else{ cout<<"YES"<<endl;
        cout<<s<<endl;
        }
    }
    
 
    return 0;
}
