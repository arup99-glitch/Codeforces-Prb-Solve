#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int t;
    cin>>t;
    while(t--){
        int n;
        double a,b;
        
        cin>>n>>a>>b;
        if(b/2<a){
            if(n%2!=0)cout<<b*((n-1)/2)+a<<endl;
            else {
                double d=b/2;
                cout<<d*n<<endl;
            }
        }
        else cout<<a*n<<endl;
        
    }
 
    return 0;
}
