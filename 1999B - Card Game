#include <bits/stdc++.h>
using namespace std;

int main() {
    
    int t;
    cin>>t;
    while(t--){
        int a,b,c,d;
        cin>>a>>b>>c>>d;
        int count=0,count1=0;
        if(a>c && b>=d || a>=c && b>d)count+=2;
        if(a>d && b>=c || a>=d && b>c)count+=2;
        cout<<count<<endl;
    }

    return 0;
}
