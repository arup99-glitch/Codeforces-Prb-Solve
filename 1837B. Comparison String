#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int t;
    cin>>t;
    while(t--){
       int n;
       cin>>n;
       string a;
       cin>>a;
       int count =1,count1=1;
       for(int i=0;i<n-1;i++){
           if(a[i]!=a[i+1])count1=1;
           else count1++;
           count=max(count,count1);
           
       }
       cout<<count+1<<endl;
       
    }
 
    return 0;
}
