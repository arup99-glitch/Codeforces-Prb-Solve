#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
        string s;
        cin>>s;
        int count=1,temp=0;
        for(int i=0;i<s.size()-1;i++){
            if(s[i]!=s[i+1])count++;
            if(s[i]=='0' &&s[i+1]=='1')temp=1;
            
        }
        if(temp==1)cout<<count-1<<endl;
        else cout<<count<<endl;
    }
 
}
