#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        int on=0;
        for(int i=0;i<2*n;i++){
            int a;
            cin>>a;
            if(a==1)on++;
        }
         cout<<on%2<<" "<<(on<=n?on:(2*n-on));
         cout<<endl;
       
    }
 
    return 0;
}
