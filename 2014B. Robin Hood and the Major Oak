#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int t;
    cin>>t;
    while(t--){
        int a,b;
        cin>>a>>b;
        int sum = (a*(a+1))/2;
        int sum2=((b-a)*(a-b+1))/2;
        if((sum-sum2)%2==0)cout<<"YES"<<endl;
        else cout<<"NO"<<endl;
    }
 
    return 0;
}
