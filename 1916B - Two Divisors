#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

int main() {
    int t;
    cin>>t;
    while(t--){
        ll a,b;
        cin>>a>>b;
        ll d = a*b;
        if(b%a==0){
            cout<<(b*b)/a<<endl;
            continue;
        }
        else {
            ll d=a*b/(__gcd(a,b));
            cout<<d<<endl;
        }
        
    }
    return 0;
}
