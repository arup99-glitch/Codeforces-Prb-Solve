#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
        int a,b;
        cin>>a>>b;
        string s,x;
        cin>>s>>x;
        int z=-1;
        for(int i=0;i<=10;i++){
            if(s.find(x)!=-1){
                z=i;
                break;
            }
            s+=s;
        }
        cout<<z<<endl;
    }

    return 0;
}
