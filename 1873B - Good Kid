
#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
        int n,count=1;
        cin>>n;
         int x[n];
        for(int i=0;i<n;i++){
           
            cin>>x[i];
           
        }
        sort(x,x+n);
        x[0]++;
        for(int i=0;i<n;i++){
            count *= x[i];
        }
        cout<<count<<endl;
    }
    

    return 0;
}
