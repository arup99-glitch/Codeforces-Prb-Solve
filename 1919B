#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
        int n,plus =0,minus=0;
        cin>>n;
        string s;
        cin>>s;
        for(int i=0;i<n;i++){
            if(s[i]=='+')plus++;
            else minus++;
        }
        cout<<abs(plus - minus)<<endl;
    }
   

    return 0;
}
