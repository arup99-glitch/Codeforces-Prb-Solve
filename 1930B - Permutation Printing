#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
        int a,b;
        cin>>a;
        int start=1;
        int end=a;
        for(int i=1;i<=a;i++){
            if(i&1){
                cout<<start<< " ";
                start++;
            }
            else{
                cout<<end<<" ";
                end--;
            }
        }
        cout<<endl;
    }

    return 0;
}
