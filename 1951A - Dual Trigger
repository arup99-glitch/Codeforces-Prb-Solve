#include <bits/stdc++.h>
using namespace std;

int main() {
    
    int t;
    cin>>t;
    while(t--){
    int n;
    cin>>n;
    string s;
    cin>>s;
    int count=0,f=0;
    for(int i=0;i<n;i++){
        if(s[i]=='1')count++;
        if(s[i]=='1'&&s[i+1]=='1')f=1;
    }
    if(count%2==1)cout<<"NO"<<endl;
    else if(count==2 && f==1)cout<<"NO"<<endl;
    else cout<<"YES"<<endl;
    }

    return 0;
}
