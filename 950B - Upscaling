#include<bits/stdc++.h>
using namespace std;
 
int main() {
    int t;
    cin>>t;
    while(t--){
        int a;
        vector<string>v;
        cin>>a;
        for(int i=1;i<=a;i++){
            string row = "";
            for(int j=1;j<=a;j++){
                if(i%2!=0){
                    if(j%2==0) row+="..";
                    else row+="##";
                }
                else{
                    if(j%2==0) row+="##";
                    else row+="..";
                }
            }
            v.push_back(row);
        }
        for (const auto& r : v){
            cout << r << endl;
            cout<<r<<endl;
        }
            
            
    }
 
    return 0;
}
