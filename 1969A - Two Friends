#include <bits/stdc++.h>
using namespace std;

int main() {
    
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        int a[n];
        for(int i=0;i<n;i++){
        cin>>a[i];
        }
        int count =0;
        for(int i=0;i<n;i++){
             if(a[a[i]-1]==i+1){
                count=1;
                }
        }
        if(count==1)cout<<2<<endl;
        else cout<<3<<endl;
    }
    return 0;
}
