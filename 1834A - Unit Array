#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
    int n;
    cin>>n;
    int c=0;
    for(int i=0;i<n;i++){
        int a;
        cin>>a;
        if(a==-1)c++;
        
    }
    if(c==n)cout<<n<<endl;
    else if(c%2==0)cout<<0<<endl;
    else{
        cout<<1<<endl;
    }
     
    }

    return 0;
}
