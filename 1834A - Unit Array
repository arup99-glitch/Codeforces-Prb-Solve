#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
        int n,k,count=0,sum=0;
        cin>>n;
        int a[n];
        for(int i=0;i<n;i++){
            cin>>a[i];
            if(a[i]==-1)count++;
        }
        while(count>n-count){
            count--;
            sum++;
        }
        cout<<sum+(count%2)<<endl;
        }
    return 0;
}
